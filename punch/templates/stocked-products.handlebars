{{> header}}

<!--======================== content ===========================-->
<section id="content" class="stocked-products">
  <div class="container_12">
    <div class="wrapper m1">
      <article class="grid_8">
        <h3>Stocked Products</h3>
        <p>
          AeroCoat offers the following key Mil-Spec &amp; Aerospace coatings
          products ready for same or next day shipping.
        </p>
        <p>
          We have no minimum orders, and quantity discounts start at 2 or
          more gallon kits for many products.
        </p>

      </article>

      <p class="grid_4 fright toggle">
        Display by:
        <span class="on" id="toggleManufacturer">Manufacturer</span> |
        <span id="toggleType">Mil-spec</span>
        <br/>
        <span class="expand-all">Expand All</span> |
        <span class="collapse-all">Collapse All</span>
      </p>

      <br class="clear" />

      <h5 class="grid_12 p10">
        Don't See what you're looking for?
      </h5>

      <p class="grid_12">
        Our stock list changes constantly.  If you don't see an item on this list, we still may have it!
      </p>
      <p class="grid_12">
        Give us a call anytime and our sales staff would be happy to help you locate what you are looking for.  You can also <a href="contact-us.html">Contact Us</a>.
      </p>

      <div class="group byManufacturer p10">
        {{> category-products stockedProducts.byManufacturer}}
      </div>

      <div class="group byType p10">
        {{> category-products stockedProducts.byType}}
      </div>

    </div>
  </div>
</section>

<script>
  $(function() {

    $('#toggleManufacturer').click(function () {
      var $p = $(this);
      $('#toggleType').removeClass('on');
      $p.addClass('on');
      $('.byType').hide();
      $('.byManufacturer').show();
    });

    $('#toggleType').click(function () {
      var $p = $(this);
      $('#toggleManufacturer').removeClass('on');
      $p.addClass('on');
      $('.byManufacturer').hide();
      $('.byType').show();
    });

    $('.category-container .expand').on('click', function (e) {
      var $btn = $(this),
          $span = $btn.find('span'),
          $products = $btn.parents('.category-container').find('.products-container');

      if ($products.is(':visible')) {
        $span.html('+');
        $products.slideUp();
      } else {
        $span.html('-');
        $products.slideDown();
      }
    });

    $('.expand-all').on('click', function (e) {
      $('.products-container').slideDown();
      $('.category-container .expand span').html('-');
    });

    $('.collapse-all').on('click', function (e) {
      $('.products-container').slideUp();
      $('.category-container .expand span').html('+');
    });
  });
</script>

